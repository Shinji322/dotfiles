#!/usr/bin/env bash
# Disables trackpad on xorg systems
dependencies=('xorg' 'grep' 'unclutter')

# TOUCH_ID="$(xinput list | rg -o 'Touchpad.*id=(\d+)' -r '$1')"
# Prefer not using ripgrep
TOUCH_ID="$(xinput list | grep -o 'Touchpad.*=[0-9]*')" 
xinput disable "${TOUCH_ID#*=}" || { 
  echo "Some error occurred"; exit 1
}
unclutter &
