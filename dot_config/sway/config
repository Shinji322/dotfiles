# vim: filetype=swayconfig
# style

font 			            pango:monospace 16px 
default_border 		        pixel 	1
# titlebar_border_thickness 	1
# gaps 			            top	5
# gaps 			            bottom	0
# gaps 			            left	5
# gaps 			            right	5
# gaps 			            inner 	5



# window decorations
# class			        border	    background	text        indicator   child_border
client.focused          #80a0ff     #303030     #c6c6c6     #80a0ff     #80a0ff
client.focused_inactive #80a0ff     #303030     #c6c6c6     #80a0ff     #80a0ff
client.unfocused        #80a0ff     #080808     #c6c6c6     #80a0ff     #303030
client.urgent           #80a0ff     #80a0ff     #080808     #80a0ff     #80a0ff

# keybindings
set 	$mod 	  Mod4
set   $alt    Mod1
set 	$left   h
set 	$down	  j
set 	$up 	  k
set 	$right 	l
set 	$term 	foot
set 	$menu 	wofi --show drun | xargs swaymsg exec --

## Output configuration
# Behavior
focus_follows_mouse 	yes

# Idle configuration
exec swayidle -w \
	timeout 600 'swaylock -f' \
	timeout 1800 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
	before-sleep 'swaylock -f'

# status Bar:
bar {
  swaybar_command waybar
}

include apps
include hardware
include swaybinds

include /etc/sway/config.d/*
